{
    "manifest_version": 3,
    "name": "IG DM Reel Scroller",
    "version": "1.1",
    "description": "A Browser extension which automatically scrolls through all reels in any of your DMs seamlessly.",
    "permissions": ["activeTab", "storage"],
    "action": {
    "default_popup": "popup.html",
    "default_title": "IG Player Settings"
    },
    "content_scripts": [
        {
            "matches": ["https://www.instagram.com/*"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ],
  "icons": {
    "128": "image.png"
  }
}
